<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping map-id="MovieEntity_Movie">
        <class-a>com.project.movie.entity.MovieEntity</class-a>
        <class-b>com.project.movie.base.dto.Movie</class-b>
    </mapping>

    <mapping map-id="CastEntity_Cast">
        <class-a>com.project.movie.entity.CastEntity</class-a>
        <class-b>com.project.movie.base.dto.Cast</class-b>
        <field>
            <a>castFeatureEntity.castFeatureId</a>
            <b>castFeature.castFeatureId</b>
        </field>
        <field>
            <a>castFeatureEntity.castId</a>
            <b>castFeature.castId</b>
        </field>
        <field>
            <a>castFeatureEntity.isActor</a>
            <b>castFeature.isActor</b>
        </field>
        <field>
            <a>castFeatureEntity.isActress</a>
            <b>castFeature.isActress</b>
        </field>
    </mapping>

    <mapping map-id="CastFeatureEntity_CastFeature">
        <class-a>com.project.movie.entity.CastFeatureEntity</class-a>
        <class-b>com.project.movie.base.dto.CastFeature</class-b>
    </mapping>

    <mapping map-id="MovieCastsEntity_MovieCasts">
        <class-a>com.project.movie.entity.MovieCastsEntity</class-a>
        <class-b>com.project.movie.base.dto.MovieCasts</class-b>
    </mapping>
</mappings>